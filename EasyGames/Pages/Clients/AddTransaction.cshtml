@page
@model EasyGames.Pages.Clients.AddTransactionModel
@{
    ViewData["Title"] = "Add Transaction";
}

<br>
<h3 style="text-align: center;">Edit Transactions</h3>
<br>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>

    </div>

}

<form method="POST">

    <input type="hidden" name="id" value="@Model.clientInfo.clientid">
    <input type="hidden" name="clientbal" value="@Model.clientInfo.ClientBalance">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Comment</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="comment" value="@Model.transactionInfo.Comment" style="background-color: #9dc3f7;" placeholder="Enter Transaction Comment">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Transaction Type</label>
        <div class="col-sm-4">
            <select class="form-control" name="transactiontype" style="background-color: #9dc3f7;">
                <option value="">Select Transaction Type</option>
                <option value="1">Debit</option>
                <option value="2">Credit</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Client Balance</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="amount" value="@Model.transactionInfo.Amount" style="background-color: #9dc3f7;" placeholder="Enter Transaction Amount">
        </div>
    </div>

    @if (Model.successMessage2.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage2</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>

                </div>
            </div>

        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Clients/Index" role="button">Cancle</a>
        </div>
    </div>

</form>


